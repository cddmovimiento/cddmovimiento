<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_form_inherit_cdd" model="ir.ui.view">
            <field name="name">project.task.form.inherit_cdd</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="employee_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='partner_phone']" position="after">
                    <field name="pozo"/>
                </xpath>
                <xpath expr="//field[@name='user_ids']" position="replace">
                    <field name="user_ids" invisible="True"/>
                </xpath>
                <xpath expr="//field[@name='sale_line_id']" position="replace">
                    <field name="sale_line_id" invisible="True"/>
                </xpath>
                <xpath expr="//page[@name='description_page']" position="after">
                    <page name="binnacle_page" string="BitÃ¡cora">

                        <field name = "id" invisible = "1"/>
                        <field name="binnacle_ids" context="{'default_parent_id_int': id}">
                            <tree editable="top">
                                <field name = "parent_id_int" invisible = "1" force_save="1"/>
                                <field name = "parent_id" invisible = "1"/>
                                <field name = "product_id" domain="[('in_sale_order', '=', parent_id_int)]"/>
                                <field name = "gruero_id" required="1" options="{'no_open':True, 'no_create': True}" domain="['&amp;', ('job_id.name','=','Operador de Grua'),('in_project_task', '=', parent_id_int)]"/>
                                <field name = "ayudante_id" required="1" options="{'no_open':True, 'no_create': True}" domain="['&amp;', ('job_id.name','=','Ayudante de Grua'),('in_project_task', '=', parent_id_int)]"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>